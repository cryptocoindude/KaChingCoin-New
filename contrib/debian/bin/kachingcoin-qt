#!/bin/sh

set -e

umask 077

basedir=~/.KaChingCoin
dbfile="$basedir/DB_CONFIG"
cfgfile="$basedir/KaChingCoin.conf"

[ -e "$basedir" ] || mkdir "$basedir"

# KaChingCoin does not clean up DB log files by default
[ -e "$dbfile" ] || echo 'set_flags DB_LOG_AUTOREMOVE' > "$dbfile"

exec /usr/lib/KaChingCoin/KaChingCoin-qt "$@"
